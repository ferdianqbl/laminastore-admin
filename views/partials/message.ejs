<div class="alert alert-<%= alert.status %> alert-dismissible fade mb-5 <%= alert.message != '' ? 'show' : 'd-none' %>"
  role="alert">
  <%= alert.message %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>