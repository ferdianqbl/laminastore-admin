<div class="card">
  <div class="card-header">
    <a href="/nominal/create" class="btn btn-primary"><i class="nav-icon far fa-plus-square mr-2"></i>Add</a>
  </div>

  <div class="card-body">
    <table id="example2" class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>No.</th>
          <th>Name</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Time Added</th>
          <th>Time Updated</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if(nominals.length > 0){ %>
        <% nominals.forEach((item, index)=> { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.coinName %></td>
          <td><%= item.coinQuantity %></td>
          <td><%= item.price %></td>
          <td>
            <%= item.createdAt.toLocaleString('en-GB', {dateStyle:'full', timeStyle:'medium'}) %>
          </td>
          <td>
            <%= item.updatedAt.toLocaleString('en-GB', {dateStyle:'full', timeStyle:'medium'}) %>
          </td>
          <td class="d-flex flex-wrap">
            <a href="/nominal/edit/<%= item._id %>" class="btn btn-sm btn-outline-info d-inline-block m-1"><i
                class="nav-icon fas fa-pencil-alt"></i> Edit</a>
            <form method="POST" action="/nominal/delete/<%= item._id %>?_method=DELETE" class="d-inline-block m-1">
              <button type="submit" class="btn btn-sm btn-outline-danger"><i class="nav-icon fas fa-trash"></i>
                Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
        <% } else { %>
        <tr>
          <td colspan="7" class="text-center">No data</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

</div>