<div class="card">
  <div class="card-header">
    <a href="/category/create" class="btn btn-primary"><i class="nav-icon far fa-plus-square mr-2"></i>Add</a>
  </div>

  <div class="card-body">
    <table id="example2" class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>No.</th>
          <th>Name</th>
          <th>Time Added or Updated</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach((item, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.name %></td>
          <td>
            <%= item.timestamp.toLocaleString('en-GB', {dateStyle:'full', timeStyle:'medium'}) %>
          </td>
          <td>
            <a href="/category" class="btn btn-outline-warning"><i class="nav-icon far fa-plus-square"></i></a>
            <a href="/category" class="btn btn-outline-danger"><i class="nav-icon far fa-plus-square"></i></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <th>No.</th>
          <th>Name</th>
          <th>Time Added or Updated</th>
          <th>Actions</th>
        </tr>
      </tfoot>
    </table>
  </div>

</div>